@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_FELayout.cshtml";
}

@model LibraSoftSolution.ViewModels.Event.RegistersVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<!-- page-title-area start -->
<section class="page-title-area pt-320 pb-140" data-background="img/slider/slide3.jpg">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="page-title page-title-white text-center">
                    <h2>News Feeds</h2>
                    <div class="breadcrumb-list">
                        <ul>
                            <li><a href="#">Home</a></li>
                            <li>New - Events</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- page-title-area end -->
<!-- blog-area start -->
<section class="blog-area grey-bg pt-50 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="postbox post format-image mb-40">
                    <div class="postbox__thumb">
                    </div>
                    <div class="postbox__text p-50 flexdiv-blog">
                        <div style="margin-right:20px">
                            <img src="~/img/bg/EventFinal.jpg" alt="event1 image" class="center" width="100%">
                        </div>
                        <div>
                            <div class="post-meta mb-15">
                                <span><i class="far fa-calendar-check"></i> @localizer["July 14, 2022"] </span>
                                <span><i class="far fa-user"></i> Mr.Wiliam Gan</span>
                            </div>
                            <h3 class="event-mini-title">
                                @localizer["Smart Data Capture Superpowers To Your Business"]
                            </h3>
                            <div class="post-text mb-20">
                                <p>@localizer["Most logistic companies are concerned about operational excellence of the company and the operations executives have tough times ensuring efficiency and reliability of operations while keeping costs low. Improving operational processes and profitability are crucial, exceeding KPIs through modernized operations."]</p>
                            </div>
                            <div class="read-more mt-30">
                                <a asp-controller="Event" asp-action="Event1" class="btn btn-red">@localizer["read more"]</a>
                            </div>
                        </div>
                    </div>
                </div>
